@model Account
@{
    ViewData["Title"] = "NewAccount";
}

<h2>New Account</h2>

<form asp-action="NewAccount" method="post" class="form-horizontal" role="form">

    <div class="form-group">
        <label asp-for="AccountNumber" class="col-md-5 control-label"></label>
        <div class="col-md-5">
            <input asp-for="AccountNumber" class="form-control"/>
            <span asp-validation-for="AccountNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="AccountName" class="col-md-5 control-label"></label>
        <div class="col-md-5">
            <input asp-for="AccountName" class="form-control"/>
            <span asp-validation-for="AccountName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-md-5 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Password" type="password" class="form-control"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-6 col-md-5">
            <input type="submit" class="btn btn-success" value="Create"/>
        </div>
    </div>
</form>

