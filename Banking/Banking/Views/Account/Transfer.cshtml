@model TransferViewModel
@{
    ViewData["Title"] = "Transfer";
}

<h2>Transfer</h2>

<form asp-action="Transfer" class="form-horizontal" method="post" role="form">
    @Html.Hidden("id", @Model.Account.Id)
    <div class="form-group">
        <label class="col-sm-2 control-label">Account Number</label>
        <div class="col-sm-10">
            <label class="control-label">@Model.Account.AccountNumber</label>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Account Name</label>
        <div class="col-sm-10">
            <label class="control-label">@Model.Account.AccountName</label>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Password</label>
        <div class="col-md-10">
            <input type="password" class="form-control" placeholder="Enter Password" name="password"/>
            <span asp-validation-for="Account.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Amount</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" placeholder="Amount" name="amount"/>
            <span asp-validation-for="Account.Balance" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Transfer To</label>
        <div class="col-sm-10">
            <input class="form-control"name="transferAccount" />
            <span asp-validation-for="TransferToAccount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Confirm</button>
        </div>
    </div>
</form>
